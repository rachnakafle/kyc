@model List<First_Project.Models.Form>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
       <div class="col-6"><h2 >List of Data</h2></div>
        <div class="col-6 text-right"><a asp-controller="Form" asp-action="Create" class="btn btn-primary ">Create New Data</a></div>
    </div>
</div>
<hr/>

<div class="col-12">
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>FullName</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>FatherName</th>
                <th>MotherName</th>
                <th>GrandFatherName</th>
                <th>Occupation</th>
                <th>Nationality</th>
                <th>Province</th>
                <th>District</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
               <tr>
                   <td width="50%">@item.FullName</td>
                   <td width="50%">@item.DOB</td>
                   <td width="50%">@item.Gender</td>
                   <td width="50%">@item.Email</td>
                   <td width="50%">@item.PhoneNumber</td>
                   <td width="50%">@item.FatherName</td>
                   <td width="50%">@item.MotherName</td>
                   <td width="50%">@item.GrandFatherName</td>
                   <td width="50%">@item.Occupation</td>
                   <td width="50%">@item.Nationality</td>
                   <td width="50%">@item.Province</td>
                   <td width="50%">@item.District</td>
               </tr>
            }
        </tbody>
    </table>
</div>