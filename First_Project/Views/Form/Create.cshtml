@model Form

<form method="post">
    <div class="border p-3 mt-4"> 
        <div class="row pb-2">
            <h5>Create KYC Details</h5>
            <hr/>
        </div>

        <div class="mb-3">
            @Html.LabelFor(a => a.FullName, new {@class ="", @id =""})
            @Html.TextBoxFor(a => a.FullName , new {@class="form-control"})
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.DOB, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.DOB , new {@class="form-control"})
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.Gender, new {@class ="control-label", @id =""})<br />
                    Male:   @Html.RadioButton("Gender","Male")  
                    Female: @Html.RadioButton("Gender","Female") 
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

         <div class="row">
             <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.Email, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.Email , new {@class="form-control"})
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
       
            <div class="col-md-6 mb-3">
                 @Html.LabelFor(a => a.PhoneNumber, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.PhoneNumber , new {@class="form-control"}) 
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div> 
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.MaritalStatus, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.MaritalStatus , new {@class="form-control"})
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.FatherName, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.FatherName , new {@class="form-control"}) 
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.GrandFatherName, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.GrandFatherName , new {@class="form-control"}) 
                <span asp-validation-for="GrandFatherName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.MotherName, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.MotherName , new {@class="form-control"}) 
                <span asp-validation-for="MotherName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.Occupation, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.Occupation , new {@class="form-control"})
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                @Html.LabelFor(a => a.Nationality, new {@class ="", @id =""})
                @Html.TextBoxFor(a => a.Nationality , new {@class="form-control"})
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
        </div>

        <div class="text-right">
             <button type="submit" class="btn btn-primary w-20">Create</button>
             <a asp-controller="Form" asp-action="Index"  class="btn btn-outline-secondary w-20 me-1">Back To List</a>
        </div> 
    </div>
</form>

